<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net452</TargetFramework>
    <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
    <PublishUrl>publish\</PublishUrl>
    <Install>true</Install>
    <InstallFrom>Disk</InstallFrom>
    <UpdateEnabled>false</UpdateEnabled>
    <UpdateMode>Foreground</UpdateMode>
    <UpdateInterval>7</UpdateInterval>
    <UpdateIntervalUnits>Days</UpdateIntervalUnits>
    <UpdatePeriodically>false</UpdatePeriodically>
    <UpdateRequired>false</UpdateRequired>
    <MapFileExtensions>true</MapFileExtensions>
    <ApplicationRevision>0</ApplicationRevision>
    <ApplicationVersion>1.0.0.%2a</ApplicationVersion>
    <IsWebBootstrapper>false</IsWebBootstrapper>
    <UseApplicationTrust>false</UseApplicationTrust>
    <BootstrapperEnabled>true</BootstrapperEnabled>
    <AssemblyTitle>Borderless Gaming</AssemblyTitle>
    <Company>Andrew Sampson</Company>
    <Product>Borderless Gaming</Product>
    <NeutralLanguage>en-US</NeutralLanguage>
    <Description>Play your favorite games in a borderless window; no more time-consuming Alt-Tabs!</Description>
    <Copyright>Copyright © 2014-2018 Andrew Sampson</Copyright>
    <AssemblyVersion>9.5.5.1328</AssemblyVersion>
    <FileVersion>9.5.5.1328</FileVersion>
    <PlatformTarget>x86</PlatformTarget>
    <OutputPath>bin\$(Configuration)\</OutputPath>
    <PreBuildEvent>copy $(SolutionDir)SteamLibs\* $(ProjectDir)$(OutDir)</PreBuildEvent>
  </PropertyGroup>
  <PropertyGroup>
    <AssemblyOriginatorKeyFile>..\BGKey.pfx</AssemblyOriginatorKeyFile>
  </PropertyGroup>
  <PropertyGroup>
    <ApplicationIcon>BorderlessGaming_new.ico</ApplicationIcon>
  </PropertyGroup>
  <PropertyGroup>
    <ApplicationManifest>app.manifest</ApplicationManifest>
  </PropertyGroup>
  <PropertyGroup>
    <PostBuildEventDependsOn>
      $(PostBuildEventDependsOn);
      PostBuildMacros;
    </PostBuildEventDependsOn>
  </PropertyGroup>
  <PropertyGroup>
    <PreBuildEvent>copy $(SolutionDir)SteamLibs\* $(ProjectDir)$(OutDir)</PreBuildEvent>
  </PropertyGroup>
  <Target Name="PostBuildMacros">
    <GetAssemblyIdentity AssemblyFiles="$(TargetPath)">
      <Output TaskParameter="Assemblies" ItemName="Targets" />
    </GetAssemblyIdentity>
    <ItemGroup>
      <VersionNumber Include="$([System.Text.RegularExpressions.Regex]::Replace(&quot;%(Targets.Version)&quot;, &quot;^([^\.]+)\.([^\.]+)\.([^\.]+)(.*)$&quot;, &quot;$1.$2.$3&quot;))" />
    </ItemGroup>
  </Target>
  <ItemGroup>
    <None Remove="Languages.zip" />
  </ItemGroup>
  <ItemGroup>
    <PackageReference Include="System.Data.DataSetExtensions" Version="4.*" />
    <PackageReference Include="Microsoft.CSharp" Version="4.*" />
    <PackageReference Include="System.Net.Http" Version="4.*" />
  </ItemGroup>
  <ItemGroup>
    <Reference Include="System.Deployment" />
    <Reference Include="System.Windows.Forms" />
  </ItemGroup>
  <ItemGroup>
    <Compile Update="Forms\AboutForm.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="Forms\AboutForm.Designer.cs">
      <DependentUpon>AboutForm.cs</DependentUpon>
    </Compile>
    <Compile Update="Forms\DesktopAreaSelector.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="Forms\DesktopAreaSelector.Designer.cs">
      <DependentUpon>DesktopAreaSelector.cs</DependentUpon>
    </Compile>
    <Compile Update="Forms\InputText.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="Forms\InputText.designer.cs">
      <DependentUpon>InputText.cs</DependentUpon>
    </Compile>
    <Compile Update="Forms\MainWindow.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="Forms\MainWindow.Designer.cs">
      <DependentUpon>MainWindow.cs</DependentUpon>
    </Compile>
    <Compile Update="Forms\Rainway.cs">
      <SubType>Form</SubType>
    </Compile>
    <Compile Update="Forms\Rainway.Designer.cs">
      <DependentUpon>Rainway.cs</DependentUpon>
    </Compile>
    <EmbeddedResource Update="Forms\AboutForm.de.resx">
      <DependentUpon>AboutForm.cs</DependentUpon>
      <SubType>Designer</SubType>
    </EmbeddedResource>
    <EmbeddedResource Update="Forms\AboutForm.en-US.resx">
      <DependentUpon>AboutForm.cs</DependentUpon>
    </EmbeddedResource>
    <EmbeddedResource Update="Forms\AboutForm.en.resx">
      <DependentUpon>AboutForm.cs</DependentUpon>
      <SubType>Designer</SubType>
    </EmbeddedResource>
    <EmbeddedResource Update="Forms\AboutForm.resx">
      <DependentUpon>AboutForm.cs</DependentUpon>
      <SubType>Designer</SubType>
    </EmbeddedResource>
    <EmbeddedResource Update="Forms\AboutForm.zh-CN.resx">
      <DependentUpon>AboutForm.cs</DependentUpon>
    </EmbeddedResource>
    <EmbeddedResource Update="Forms\DesktopAreaSelector.resx">
      <DependentUpon>DesktopAreaSelector.cs</DependentUpon>
    </EmbeddedResource>
    <EmbeddedResource Update="Forms\InputText.resx">
      <DependentUpon>InputText.cs</DependentUpon>
    </EmbeddedResource>
    <EmbeddedResource Update="Forms\InputText.zh-CN.resx">
      <DependentUpon>InputText.cs</DependentUpon>
    </EmbeddedResource>
    <EmbeddedResource Update="Forms\MainWindow.de.resx">
      <DependentUpon>MainWindow.cs</DependentUpon>
      <SubType>Designer</SubType>
    </EmbeddedResource>
    <EmbeddedResource Update="Forms\MainWindow.en-US.resx">
      <DependentUpon>MainWindow.cs</DependentUpon>
      <SubType>Designer</SubType>
    </EmbeddedResource>
    <EmbeddedResource Update="Forms\MainWindow.resx">
      <DependentUpon>MainWindow.cs</DependentUpon>
      <SubType>Designer</SubType>
    </EmbeddedResource>
    <EmbeddedResource Update="Forms\MainWindow.zh-CN.resx">
      <DependentUpon>MainWindow.cs</DependentUpon>
      <SubType>Designer</SubType>
    </EmbeddedResource>
    <EmbeddedResource Update="Forms\Rainway.resx">
      <DependentUpon>Rainway.cs</DependentUpon>
    </EmbeddedResource>
    <EmbeddedResource Update="Properties\Resources.resx">
      <Generator>ResXFileCodeGenerator</Generator>
      <SubType>Designer</SubType>
      <LastGenOutput>Resources.Designer.cs</LastGenOutput>
    </EmbeddedResource>
    <None Include="..\BGKey.pfx">
      <Link>BGKey.pfx</Link>
    </None>
    <None Include="app.manifest" />
    <None Include="Properties\Settings.settings">
      <Generator>SettingsSingleFileGenerator</Generator>
      <LastGenOutput>Settings.Designer.cs</LastGenOutput>
    </None>
    <Compile Update="Properties\Resources.Designer.cs">
      <AutoGen>True</AutoGen>
      <DesignTime>True</DesignTime>
      <DependentUpon>Resources.resx</DependentUpon>
    </Compile>
    <Compile Update="Properties\Settings.Designer.cs">
      <AutoGen>True</AutoGen>
      <DependentUpon>Settings.settings</DependentUpon>
      <DesignTimeSharedInput>True</DesignTimeSharedInput>
    </Compile>
  </ItemGroup>
  <ItemGroup>
    <None Include="Resources\blank.cur" />
  </ItemGroup>
  <ItemGroup>
    <None Include="Resources\add.png" />
  </ItemGroup>
  <ItemGroup>
    <None Include="Resources\bordered.png" />
  </ItemGroup>
  <ItemGroup>
    <None Include="Resources\borderless.png" />
  </ItemGroup>
  <ItemGroup>
    <None Include="Resources\globe-green.png" />
  </ItemGroup>
  <ItemGroup>
    <None Include="Resources\remove.png" />
  </ItemGroup>
  <ItemGroup>
    <None Include="Resources\steam.png" />
  </ItemGroup>
  <ItemGroup>
    <ProjectReference Include="..\BorderlessGaming.Logic\BorderlessGaming.Logic.csproj" />
  </ItemGroup>
  <ItemGroup>
    <Content Include="BorderlessGaming_new.ico" />
    <Content Include="Languages.zip">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Content>
    <EmbeddedResource Include="Resources\master-glyph.png" />
    <None Include="Resources\RainwayLogo.bmp" />
  </ItemGroup>
  <Target Name="PostBuild" Condition="'$(Configuration)' == 'Release'" AfterTargets="PostBuildEvent">
    <Exec Command="call signtool sign /tr http://timestamp.digicert.com /td sha256 /fd sha256 /as /sha1 3BD5BE571287FE2052F137C44198AE7BAB38B037 &quot;$(ProjectDir)$(OutDir)$(TargetFileName)&quot;&#xD;&#xA;call iscc /Qp &quot;$(SolutionDir)\Installers\BorderlessGaming_Standalone_Admin.iss&quot;&#xD;&#xA;call signtool sign /tr http://timestamp.digicert.com /td sha256 /fd sha256 /as /sha1 3BD5BE571287FE2052F137C44198AE7BAB38B037 &quot;$(SolutionDir)Installers\BorderlessGaming@(VersionNumber)_admin_setup.exe&quot;" />
  </Target>
</Project>